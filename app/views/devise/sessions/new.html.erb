
<section class="loguear-container app-form-papper">
  <div class="row " >
    <h5 class="mb-5 mt-3 text-center">Iniciar Sesión</h5>
    <div class="col-12">
      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-12 col-md-12 col-lg-12 col-xl-12">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", label: "Correo Electronico" %>
          </div>
          <div class="col-12 col-md-12 col-lg-12 col-xl-12">
            <%= f.password_field :password, autocomplete: "current-password", label: "Contraseña" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
              <%= f.check_box :remember_me, label: "Recordarme" %>
            </div>
          <% end %>
        </div>
        <div class="row">
          <div class="mb-2 col-4 col-md-4 col-lg-4 col-xl-4 mb-2 mt-1">
            <%= f.submit "Iniciar Sesión", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      <div class="mb-4 col-4 col-md-4 col-lg-4 col-xl-4 mb-4 mt-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
