<section class="mb-3">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-7 px-4 app-papper">
      <h5 class="mb-3 mt-3 text-center">
        Editar <%= @customer.type_customer == 'Común' ? 'Cliente' : 'Proveedor' %>
      </h5>
      <%= bootstrap_form_for(@customer) do |f| %>
        <%= render partial: 'shared/forms/errors', locals: { object: @customer } %>
        <div class="row pt-2" >
          <div class="col-6 col-md-6">
            <%= f.text_field :name, label: "Nombre"%>
          </div>
          <div class="col-6 col-md-6">
            <%= f.text_field :last_name, label: "Apellido" %>
          </div>
          <div class="col-6 col-md-6">
            <%= f.text_field :company_name, label: "Compañia" %>
          </div>
          <div class="col-6 col-md-6">
            <%= f.text_field :social_reason, label: "Razon Social" %>
          </div>
          <div class="col-12">
            <%= f.text_field :email, label: "Correo Electrónico" %>
          </div>
          <div class="col-6 col-md-4">
            <%= f.text_field :ci, label: "CI" %>
          </div>
          <div class="col-6 col-md-4">
            <%= f.text_field :phone, label: "Telefono" %>
          </div>
          <div class="col-12 col-md-4">
            <%= f.text_field :nit, label: "NIT" %>
          </div>
        </div>
        <div class="col-12 mt-3 mb-3">
          <%= f.submit "Guardar Cambios", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
