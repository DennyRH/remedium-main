
<section class="warehouse-container app-form-papper">
  <div class="row " >
    <h5 class="mb-4 mt-2 text-center">Editar Sucursal</h5>
    <div class="col-12">
      <%= bootstrap_form_with(model: @warehouse) do |f| %>
        <%= render partial: 'shared/forms/errors', locals: { object: @warehouse } %>
        <div class="row">
          <div class="col-12 col-md-12 col-lg-12 col-xl-12">
            <%= f.text_field :name, label: "Nombre" %>
          </div>
          <%= f.fields_for :warehouse_detail do |form|%>
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
              <%= form.text_field :address, label: "Dirección" %>
            </div>
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
              <%= form.text_field :municipality, label: "Ciudad / Municipio" %>
            </div>
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
              <%= form.number_field :branch_code, label: "Código de Sucursal" %>
            </div>
            <div class="col-12 col-md-12 col-lg-12 col-xl-12">
              <%= form.text_field :nit, label: "NIT" %>
            </div>
          <% end %>
        </div>
        <div class="row ">
          <div class="col-12 col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xl-8 mb-4">
            <%= f.submit "Guardar cambios", class: "btn btn-primary" %>
          </div>
          <div class="col-12 col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xl-4 mb-4">
            <%= link_to "Eliminar", warehouse_path(@warehouse),
              data: {
                turbo_method: :delete,
                turbo_confirm: "Estas seguro de Eliminar la Sucursal #{@warehouse.name}"
              }, class: 'btn btn-outline-danger'
            %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</section>
