<div class="table-responsive">
  <table class="table table-striped table-hover table-warehouse-items table-bordered">
    <thead>
      <tr>
        <th scope="col" class="text-center">ID</th>
        <th scope="col" class="min-width-2">NIT/CI</th>
        <th scope="col" class="min-width-4"><%= kind == 'buyer' ? 'Nombre' : 'RazÃ³n Social' %></th>
        <th scope="col" class="min-width-2">Correo</th>
        <th scope="col" class="min-width-2">Telefono</th>
        <th scope="col" class="min-width-1">Estado</th>
      </tr>
    </thead>
    <tbody>
      <% customers.each do |obj| %>
        <% redirect_id = send("#{obj.type.downcase}_path", obj) %>
        <tr id="<%= redirect_id %>" class="cursor-pointer" data-action="click->customers#redirectShowCustomer">
          <th id="<%= redirect_id %>" scope="row"><%= obj.id %></th>
          <td id="<%= redirect_id %>" class="min-width-2"><%= obj.document_number%></td>
          <td id="<%= redirect_id %>" class="min-width-3"><%= obj.name %></td>
          <td id="<%= redirect_id %>" class="min-width-2"><%= obj.email %></td>
          <td id="<%= redirect_id %>" class="min-width-2"><%= obj.phone %></td>
          <td id="<%= redirect_id %>" class="min-width-1"><%= obj.status_es %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
