<div class="table-responsive">
  <table class="table table-striped table-hover table-warehouse-items">
    <caption>Total productos: <%= products.count %></caption>
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col" class="min-width-2">Nombre</th>
        <th scope="col" class="min-width-2">Nombre Genérico</th>
        <th scope="col" class="min-width-4">Descripción</th>
        <th scope="col">Presentación</th>
        <th scope="col" class="min-width-2">Proveedor</th>
        <th scope="col">Código</th>
        <th scope="col" class="min-width-2">Unidad</th>
        <th scope="col">Paq./Caja</th>
        <th scope="col" class="min-width-2">Marca</th>
        <th scope="col">Categoria</th>
        <th scope="col">Estado</th>
      </tr>
    </thead>
    <tbody>
      <% products.each do |obj| %>
        <% redirect_id = product_path(obj) %>
        <tr
          class="cursor-pointer" id="<%= redirect_id %>"
          data-action="click->products#redirectShowProduct"
        >
          <th id="<%= redirect_id %>" scope="row"><%= obj.id %></th>
          <td id="<%= redirect_id %>" class="min-width-2"><%= obj.name %></td>
          <td id="<%= redirect_id %>" class="min-width-2"><%= obj.generic_name %></td>
          <td id="<%= redirect_id %>" class="min-width-4"><%= obj.description %></td>
          <td id="<%= redirect_id %>"><%= obj.presentation %></td>
          <td id="<%= redirect_id %>" class="min-width-2">
            <%= obj&.customer&.name || obj&.customer&.company_name || obj&.customer&.social_reason %>
          </td>
          <td id="<%= redirect_id %>"><%= obj.code %></td>
          <td id="<%= redirect_id %>" class="min-width-2"><%= obj.unit %></td>
          <td id="<%= redirect_id %>"><%= obj.package %></td>
          <td id="<%= redirect_id %>" class="min-width-2"><%= obj.trademark %></td>
          <td id="<%= redirect_id %>"><%= obj.category %></td>
          <td id="<%= redirect_id %>"><%= obj.status_es %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
